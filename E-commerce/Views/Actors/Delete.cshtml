@model Actor
@{
    ViewData["Title"] = "Delete Actor";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete Confirmed for @Model.Name</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                    <div class="form-group text-center ">
                        <img class="border-info rounded-circle img-thumbnail" style="max-width:150px;" id="Pictureurlpreview" />
                    </div>
                    <div class="form-group">
                        <label asp-for="picUrl" class="control-label"></label>
                        <input asp-for="picUrl" class="form-control" readonly />
                        <span asp-validation-for="picUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" readonly />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="bio" class="control-label"></label>
                    <input asp-for="bio" class="form-control" readonly />
                        <span asp-validation-for="bio" class="text-danger"></span>
                    </div>
                    <br />
                <div class="form-group align-content-center text-center">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm" class="btn btn-outline-danger mx-1" />
                    </form>
                    <a class="btn btn-outline-secondary mx-1" asp-action="Index">Show All Actors</a>
                </div>
                
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('Pictureurlpreview');
            output.src = $("#picUrl").val();
        })
    </script>
}
